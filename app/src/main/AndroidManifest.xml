<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ebooks_admin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BookList"
            android:label="Book list"></activity>

        <activity android:name=".AdminUpdateDeleteDetails"
            android:label="Update and Delete Details"/>

        <activity android:name=".AdminAddDetails"
            android:label="Add details"/>

        <activity android:name=".AdminMenu"
            android:label="Menu"/>

        <activity android:name=".AdminLogin"
            android:label="Login"/>

        <activity android:name=".MainActivity"
            android:label="eBooks Admin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>